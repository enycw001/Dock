<UserControl x:Class="Notepad.Views.Documents.FileView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:Notepad.ViewModels.Documents"
             mc:Ignorable="d"
             d:DesignWidth="300" d:DesignHeight="400"
             x:CompileBindings="True"
             x:DataType="vm:FileViewModel">
  <Grid RowDefinitions="*,Auto">
    <TextBox BorderThickness="0"
             AcceptsReturn="True"
             AcceptsTab="True"
             FontFamily="Consolas, Inconsolata"
             FontWeight="Light"
             FontSize="14"
             TextWrapping="NoWrap"
             Text="{CompiledBinding Text}"
             Grid.Row="0" />
    <Grid ColumnDefinitions="*,Auto" Grid.Row="1">
      <TextBlock Text="{CompiledBinding Path}"
                 Margin="2"
                 VerticalAlignment="Center"
                 TextWrapping="Wrap"
                 Grid.Column="0" />
      <TextBlock Text="{CompiledBinding Encoding}"
                 Margin="2"
                 VerticalAlignment="Center"
                 TextWrapping="Wrap"
                 Grid.Column="1" />
    </Grid>
  </Grid>
</UserControl>
